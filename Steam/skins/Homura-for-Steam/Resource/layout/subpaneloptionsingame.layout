{
	layout {
		place { control=EnableOverlayCheck									width=max margin-top=-4 }

		place { control=PingRateLabel												dir=down width=max start=EnableOverlayCheck y=15 }
		place { control=PingRateCombo												dir=down width=280 start=PingRateLabel y=5 }

		place { control=ShowIngameFPSLabel									dir=down start=PingRateCombo y=20 }
