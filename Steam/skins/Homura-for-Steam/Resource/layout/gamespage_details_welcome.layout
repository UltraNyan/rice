		RichText.InsetX "0"
		RichText.InsetY "3" 
		GameDetailsWelcome.WelcomeTextSpacing "0"
	}

	styles
	{
		nonsteamdetails { 
			render_bg {
				0="fill( x0, y0, x1, y0 + 1, A2.Divider )"
				1="fill( x0, y0 + 1, x1, y1, A2.Ribbon )"
