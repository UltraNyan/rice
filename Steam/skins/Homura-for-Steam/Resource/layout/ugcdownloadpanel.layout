"resource/layout/ugcdownloadpanel.layout"
{
	styles
	{
		CAppSubscriptionsDownloadPanel {
			render_bg {
				0="fill( x0, y0 + 4, x1, y1 - 2, A2.Ribbon )"
			}
			render {
				0="fill( x0, y1 - 2, x1, y1 - 1, A2.Divider )"
			}
		}

		SlimProgressBar {
			render_bg {
				0="fill( x0 + 1, y0, x1 - 1, y1, none )"
			}
			render { }
		}
	}


	layout
	{
		region { name="global" height=max width=max margin-left=16 margin-right=16 margin-top=2 }
		region { name="column1" region=global x=0 width=200 }
		region { name="column2" region=global x=216 width=284 }
		region { name="column3" region=global x=516 width=max }
		region { name="column4" region=global x=700 width=max overflow=allow-horizontal }

		place { control="downloadprogressbar" region=global align=bottom height=3 width=max margin-bottom=2 }

		// left column
		place { control="gameimage" region="column1" width=184 height=69 align=top-center margin-top=25 margin-left=16 }
		place { control="workshopminibanner" region="column1" width=184 height=26 margin-top=68 margin-left=16  }

		// left-mid column
		place { control="namelabel" region="column2" y=19 }
		place { control="viewmodsbutton" region=column2 y=50 height=24 spacing=8 }

		// right-mid column
		place { control="downloadtotallabel,starttimelabel,timeremaininglabel" region=column3 dir=down spacing=8 y=20 height=19 }
		place { control="downloadtotalfield,starttimefield,timeremainingfield" region=column3 dir=down spacing=8 y=20 x=110 height=19 }

		// right column
		place { control="pauseresumebutton" region="column4" y=44 align=right height=24 width=24 margin-right=12 }
		place { control="updatetypelabel" region="column4" y=42 align=right margin-right=43 }
		place { control="graphdownloadrate" region=column4 align=right y=74 margin-right=43 }

		//hidden
		place { control="downloadfileslabel,downloadfilesfield" height=0 width=0 }
	}
}
